<div class="crlngn-patreon-dialog">
  <header class="crlngn-patreon-header">
    <i class="fas fa-heart"></i>
    <h2>{{localize "CRLNGN_UI.settings.supportPatreon.title"}}</h2>
  </header>
  <section class="crlngn-patreon-body">
    <p>{{localize "CRLNGN_UI.settings.supportPatreon.body"}}</p>
    <p class="crlngn-patreon-highlight">{{localize "CRLNGN_UI.settings.supportPatreon.highlight"}}</p>
  </section>
  <footer class="crlngn-patreon-footer">
    <button type="button" class="crlngn-button" data-action="open-patreon">
      <i class="fab fa-patreon"></i>
      {{localize "CRLNGN_UI.settings.supportPatreon.buttonLabel"}}
    </button>
  </footer>
</div>
