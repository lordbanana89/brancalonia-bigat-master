<menu class="contents">
  {{#each folders}}
  <li class="folder" data-folder-id="{{this.id}}">
    <div class="folder-item" data-folder-id="{{this.id}}">
      <i class="fa-solid"></i>
      <span class="folder-name ellipsis">{{this.name}}</span>
    </div>
  </li>
  {{/each}}
  
  {{#each scenes}}
  <li class="ui-control scene gm" data-scene-id="{{this.id}}">
    <span class="scene-name ellipsis">{{this.name}}</span>
    {{> "modules/brancalonia-bigat/templates/scene-nav-preview.hbs" scene=this}}
  </li>
  {{/each}}
</menu>