<div class="rifugio-section brancalonia-section">
  <div class="section-header ornate">
    <h2>
      <span class="icon">üè†</span>
      Il Rifugio
      <span class="icon">üè†</span>
    </h2>
  </div>
  <div class="section-content">
    <div class="rifugio-main">
      <div class="field-group">
        <label>Nome del Rifugio:</label>
        <input type="text" name="flags.brancalonia-bigat.rifugio.nome"
               value="{{rifugio.nome}}"
               placeholder="Es: La Taverna del Gatto Nero"
               {{#unless canEdit}}disabled{{/unless}} />
      </div>
      <div class="field-group">
        <label>Ubicazione:</label>
        <input type="text" name="flags.brancalonia-bigat.rifugio.ubicazione"
               value="{{rifugio.ubicazione}}"
               placeholder="Es: Vicolo dei Ladri, Tarantasia"
               {{#unless canEdit}}disabled{{/unless}} />
      </div>
      <div class="field-group">
        <label>Tipo di Rifugio:</label>
        <select name="flags.brancalonia-bigat.rifugio.tipo" {{#unless canEdit}}disabled{{/unless}}>
          <option value="taverna" {{#if (eq rifugio.tipo 'taverna')}}selected{{/if}}>Taverna</option>
          <option value="locanda" {{#if (eq rifugio.tipo 'locanda')}}selected{{/if}}>Locanda</option>
          <option value="bordello" {{#if (eq rifugio.tipo 'bordello')}}selected{{/if}}>Bordello</option>
          <option value="magazzino" {{#if (eq rifugio.tipo 'magazzino')}}selected{{/if}}>Magazzino</option>
          <option value="palazzo" {{#if (eq rifugio.tipo 'palazzo')}}selected{{/if}}>Palazzo Abbandonato</option>
          <option value="nave" {{#if (eq rifugio.tipo 'nave')}}selected{{/if}}>Nave</option>
          <option value="altro" {{#if (eq rifugio.tipo 'altro')}}selected{{/if}}>Altro</option>
        </select>
      </div>
    </div>
    <div class="rifugio-comfort">
      <h4>Livello di Comfort:</h4>
      <div class="comfort-selector">
        {{{comfortLevels}}}
      </div>
      <div class="comfort-benefits">
        <h5>Benefici del Comfort:</h5>
        {{{comfortBenefits}}}
      </div>
    </div>
    <div class="rifugio-features">
      <h4>Caratteristiche Speciali:</h4>
      <div class="features-grid">
        {{{features}}}
      </div>
    </div>
    <div class="rifugio-description">
      <label>Descrizione:</label>
      <textarea name="flags.brancalonia-bigat.rifugio.descrizione"
                rows="4"
                placeholder="Descrivi l'aspetto e l'atmosfera del rifugio..."
                {{#unless canEdit}}disabled{{/unless}}>{{rifugio.descrizione}}</textarea>
    </div>
  </div>
</div>
