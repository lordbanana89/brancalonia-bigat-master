<div class="infamia-tracker brancalonia-resource">
  <div class="resource-header">
    <h3>
      <span class="icon">🗡️</span>
      Infamia
      <span class="tooltip-anchor" data-tooltip="La tua reputazione nel mondo criminale">ⓘ</span>
    </h3>
  </div>
  <div class="resource-content">
    <div class="infamia-bar" data-infamia="{{infamia}}" data-max="{{infamiaMax}}">
      <div class="infamia-fill" style="width: {{infamiaPercentage}}%;"></div>
      <div class="infamia-segments">{{{segments}}}</div>
    </div>
    <div class="infamia-stats">
      <span class="infamia-value">{{infamia}} / {{infamiaMax}}</span>
      <span class="infamia-level {{infamiaClass}}">{{infamiaLevel}}</span>
      {{{statusMarkup}}}
    </div>
    {{#if canEdit}}
    <div class="infamia-controls">
      <button type="button" class="infamia-adjust" data-adjust="-1" title="Diminuisci Infamia">−</button>
      <button type="button" class="infamia-adjust" data-adjust="1" title="Aumenta Infamia">+</button>
    </div>
    {{/if}}
  </div>
</div>
