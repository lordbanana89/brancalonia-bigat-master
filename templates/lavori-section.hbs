<div class="lavori-sporchi-section brancalonia-section">
  <div class="section-header">
    <h3>
      <span class="icon">ðŸ’°</span>
      {{localize "BRANCALONIA.LavoriSporchi.Title"}}
      <span class="tooltip-anchor" data-tooltip="{{localize 'BRANCALONIA.LavoriSporchi.Tooltip'}}">â“˜</span>
    </h3>
  </div>
  <div class="section-content">
    <div class="lavori-summary">
      <div class="stat-box">
        <span class="stat-label">{{localize "BRANCALONIA.LavoriSporchi.Completed"}}:</span>
        <span class="stat-value">{{completedCount}}</span>
      </div>
      <div class="stat-box">
        <span class="stat-label">{{localize "BRANCALONIA.LavoriSporchi.Active"}}:</span>
        <span class="stat-value">{{activeCount}}</span>
      </div>
      <div class="stat-box">
        <span class="stat-label">{{localize "BRANCALONIA.LavoriSporchi.TotalEarnings"}}:</span>
        <span class="stat-value">{{totalEarnings}} ðŸª™</span>
      </div>
    </div>
    <div class="lavori-list">
      <h4>{{localize "BRANCALONIA.LavoriSporchi.Registry"}}:</h4>
    <div class="lavori-list">
      {{#if lavori.length}}
        {{#each lavori}}
          <div class="lavoro-entry {{#if this.completed}}completed{{/if}}" data-index="{{@index}}">
            <div class="lavoro-header">
              <h4>{{this.title}}</h4>
              <span class="lavoro-reward">{{this.reward}} mo</span>
            </div>
            <div class="lavoro-details">
              {{#if this.description}}
                <p class="lavoro-description">{{this.description}}</p>
              {{/if}}
              {{#if this.deadline}}
                <p class="lavoro-deadline">
                  <i class="far fa-calendar"></i> {{localize "BRANCALONIA.LavoriSporchi.Deadline"}}: {{this.deadline}}
                </p>
              {{/if}}
            </div>
            {{#if ../canEdit}}
              <div class="lavoro-actions">
                <button type="button" class="toggle-lavoro" data-index="{{@index}}"
                        aria-label="{{#if this.completed}}{{localize 'BRANCALONIA.LavoriSporchi.Reopen'}}{{else}}{{localize 'BRANCALONIA.LavoriSporchi.Complete'}}{{/if}}">
                  <i class="fas {{#if this.completed}}fa-undo{{else}}fa-check{{/if}}"></i>
                  {{#if this.completed}}
                    {{localize "BRANCALONIA.LavoriSporchi.Reopen"}}
                  {{else}}
                    {{localize "BRANCALONIA.LavoriSporchi.Complete"}}
                  {{/if}}
                </button>
                <button type="button" class="archive-lavori-btn" data-index="{{@index}}"
                        aria-label="{{localize 'BRANCALONIA.LavoriSporchi.Archive'}} {{this.title}}">
                  <i class="fas fa-archive"></i>
                </button>
              </div>
            {{/if}}
          </div>
        {{/each}}
      {{else}}
        <p class="empty-state">{{localize "BRANCALONIA.LavoriSporchi.NoJobs"}}</p>
      {{/if}}
    </div>
    </div>
    {{#if canEdit}}
      <div class="lavori-actions">
        <button type="button" class="add-lavoro-btn" aria-label="{{localize 'BRANCALONIA.LavoriSporchi.Add'}}">
          <span class="icon">ðŸ“‹</span> {{localize "BRANCALONIA.LavoriSporchi.Add"}}
        </button>
        <button type="button" class="archive-lavori-btn" aria-label="{{localize 'BRANCALONIA.LavoriSporchi.Archive'}}">
          <span class="icon">ðŸ“š</span> {{localize "BRANCALONIA.LavoriSporchi.Archive"}}
        </button>
      </div>
    {{/if}}
  </div>
</div>

